2015-01-13 10:07

function genJsCode($classid)
{
	$ret = sprintf('<script> 
			var tag%sid = 1;
			function xxx%s()
			{ 
				if(tag%sid&1) {
					$(".xxx%s").attr("checked","checked");
					$("#ssss%s").attr("value","反选");
				}
				else {
					$(".xxx%s").attr("checked","");
					$("#ssss%s").attr("value","全选");
				}
				tag%sid++;
			}
			</script>',$classid,$classid,$classid,$classid,$classid,$classid,$classid,$classid,$classid,$classid);
	return $ret;
}

